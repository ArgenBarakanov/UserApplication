<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_graph"
    app:startDestination="@id/catalogFragment2">

    <fragment
        android:id="@+id/catalogFragment2"
        android:name="com.example.userapplication.catalog.CatalogFragment"
        android:label="CatalogFragment" >
        <action
            android:id="@+id/showProduct"
            app:destination="@id/productFragment"
            app:popUpTo="@id/catalogFragment2" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.userapplication.product.ProductFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" >
        <argument
            android:name="product"
            app:argType="com.example.userapplication.network.rest.dto.Product" />
    </fragment>
</navigation>